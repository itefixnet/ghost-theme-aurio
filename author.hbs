{{!< default}}

<main class="main-content">
    
    {{#author}}
        <header class="author-header">
            {{#if profile_image}}
                <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}">
            {{/if}}
            <h1 class="author-name">{{name}}</h1>
            {{#if bio}}
                <p class="author-bio">{{bio}}</p>
            {{/if}}
            {{#if website}}
                <a class="author-website" href="{{website}}" target="_blank" rel="noopener">{{website}}</a>
            {{/if}}
        </header>
    {{/author}}

    <div class="post-feed">
        {{#foreach posts}}
            <article class="post-card">
                
                {{#if feature_image}}
                    <a class="post-card-image-link" href="{{url}}">
                        <img class="post-card-image" src="{{feature_image}}" alt="{{title}}">
                    </a>
                {{/if}}
                
                <div class="post-card-content">
                    <header class="post-card-header">
                        <h2 class="post-card-title">
                            <a href="{{url}}">{{title}}</a>
                        </h2>
                    </header>
                    
                    <div class="post-card-excerpt">
                        {{excerpt words="25"}}
                    </div>
                    
                    <footer class="post-card-meta">
                        <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">
                            {{date format="MMM DD, YYYY"}}
                        </time>
                        {{#if primary_tag}}
                            <span class="post-card-tag">{{primary_tag.name}}</span>
                        {{/if}}
                    </footer>
                </div>
                
            </article>
        {{/foreach}}
    </div>
    
    {{pagination}}
    
</main>
